@model Cwb.TalentSite.ViewModel.CompCardViewModel
<style>
    body {
        font-family: "Segoe UI", Verdana, Helvetica, Sans-Serif;
        color: #7f7f7f;
    }
</style>
<table border="0" cellspacing="0" cellpadding="0"  style="margin:auto;width:850px">
    <tr>
        <td valign="top" style="padding-top:20px">
            <table border="0" cellspacing="0" cellpadding="0">
                @for (var i = 1; i <= 3; i++)
                {
                    <tr>
                        @for (var j = 1; j <= 3; j++)
                        {
                            <td style="padding:10px">
                                <img src='http://app.at2casting.com/au/upload/photo/@Model.Profile["Result"]["CompCard"]["PhotoList"][@i * @j]t.jpg' width="150" />
                            </td>
                        }
                    </tr>
                }
            </table>
            <div style="text-align:center;font-size:16px;">
                @foreach (var code in Model.Profile["Result"]["CompCard"]["ProfileItems"])
                {
                    foreach (var stats in Model.Profile["Result"]["Statistics"])
                    {
                        if (stats["Code"].ToString() == code.ToString())
                        {
                            <dl style="display:inline-block;margin:0 5px 5px 0;font-size:16px;">
                                <dt style="display:inline-block;margin-right:2px">@stats["Name"]</dt>
                                <dd style="display:inline-block;color:#7f7f7f">@stats["Value"]</dd>
                            </dl>
                            break;
                        }
                    }
                }
            </div>
        </td>
        <td valign="top" align="center" style="padding-left:10px;">
            <h3 style="text-align:center;text-transform:uppercase; font-size:30px;color:#000000">
                @Model.Profile["Result"]["FirstName"] @Model.Profile["Result"]["LastName"]
            </h3>
            <img src='http://app.at2casting.com/au/upload/photo/@Model.Profile["Result"]["CompCard"]["PhotoList"][0]h.jpg' width="380" style="display:block" />
            <img src='@Model.Agency["Result"]["Logo"]' style="display:block;margin:10px 0" />
            <address style="font-size:18px;">
                <strong>@Model.Agency["Result"]["AgencyName"]</strong><br>
                @Model.Agency["Result"]["Addresses"][0]["AddressName"], @Model.Agency["Result"]["Addresses"][0]["City"]<br>
                @Model.Agency["Result"]["Addresses"][0]["StateName"], @Model.Agency["Result"]["Addresses"][0]["CountryName"] @Model.Agency["Result"]["Addresses"][0]["PostCode"]<br>
                <abbr title="Phone">Ph:</abbr> @Model.Agency["Result"]["Phone"]<br>
                <a href='mailto:@Model.Agency["Result"]["EmailDesc"]' style="color:#7f7f7f">@Model.Agency["Result"]["EmailDesc"]</a>
            </address>
        </td>
    </tr>
</table>